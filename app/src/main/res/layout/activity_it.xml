<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient4"
    tools:context=".sofrware1">

    <TextView
        android:id="@+id/ittitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Department of IT Management"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/itstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ittitle"
        android:text="IT경영과"
        android:textSize="30dp"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/it1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="지식정보사회에 적합한 미래의 CEO로서 기업경영에 필요한 전문적인 능력을 함양하고 사이버공간을 활용한 기업 활동 능력을 기른다.
인터넷마케팅, 경영정보시스템, 창업일반, 물류관리, 프로그래밍, 인터넷 창업실무, 마케팅 실무, 데이터베이스, 전자상거래 일반, 인터넷쇼핑몰 관리, 전산회계실무, 경영개요 등을 배워
컴퓨터 관련학과나 경상계열로 진학할 수 있으며, 웹마스터, 전자상거래관리사, 인터넷사업개발전문가, IT기반 CEO, 글로벌 마케터, 벤처 창업 등을 할 수 있다.
"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/itstitle"
        tools:layout_editor_absoluteX="0dp"
        />

    <Button
        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Community"
        android:textColor="#0B975D"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/club3"
        android:layout_marginTop="188dp"/>

    <Button
        android:id="@+id/club3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="동아리"
        android:textColor="#0B975D"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        />
</androidx.constraintlayout.widget.ConstraintLayout>